/var/log/sensu/sensu-client.log {
    rotate 7
    daily
    missingok
    notifempty
    sharedscripts
    copytruncate
    compress
    postrotate
        /bin/kill -USR2 `cat /var/run/sensu/sensu-client.pid` &> /dev/null > /dev/null || true
    endscript
}

